<div class="container my-1 mx-5">
  <h1><%= @task.title %></h1>
  <div class="bg-light p-3 border mt-3">
    <p class="fs-2 "><%= @task.details %></p>
  </div>
  <div class="row mt-3">
    <%= link_to "Back", tasks_path %>
    <%= link_to "Edit this task", task_path(@task) %>
    <%= link_to "delete this task", task_path(@task),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>

</div>
